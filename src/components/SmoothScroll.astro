<script>
  import gsap from "gsap";
  import ScrollToPlugin from "gsap/ScrollToPlugin";

  gsap.registerPlugin(ScrollToPlugin);

  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll('a[href^="#"]').forEach(link => {
      link.addEventListener("click", function(this: HTMLAnchorElement, e) {
        e.preventDefault();
        const href = this.getAttribute("href");
        if (!href) return;
        const targetId = href.substring(1);
        const targetElement = document.getElementById(targetId);

        if (targetElement) {
          gsap.to(document.documentElement, { 
            duration: 1.8, // Iets langer voor extra effect
            scrollTo: { y: targetElement.offsetTop - 50, autoKill: false }, 
            ease: "expo.inOut" // ðŸ”¥ Langzaam starten, mega snelle boost!
          });
        }
      });
    });
  });
</script>