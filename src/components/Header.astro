---
// Header component
const menuItems = [
        { name: "Home", href: "/" },
        { name: "About", href: "/about" },
        { name: "Contact", href: "/contact" },
];
---

<header class="header">
        <div class="header__container">
                {/* Logo */}
                <a href="/" class="header__logo">
                        <svg height="50" width="50" xmlns="http://www.w3.org/2000/svg">
                                <circle r="20" cx="25" cy="25" fill="transparent" stroke="#ff9d20" stroke-width="3"></circle>
                                <text x="50%" y="52%" text-anchor="middle" class="header__logo-text" fill="#ff9d20" stroke-width="2px" dy=".3em" style="font-size:28px;">J</text>
                        </svg>
                </a>

                {/* Menu */}
                <nav class="header__nav">
                        <ul class="header__menu">
                                {menuItems.map((item) => (
                                    <li class="header__menu-item" key={item.name}>
                                            <a href={item.href} class="header__menu-link">
                                                    {item.name}
                                            </a>
                                    </li>
                                ))}
                        </ul>
                </nav>
        </div>
</header>